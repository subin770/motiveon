<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ===============================
	     공용 경로/파일명 Bean
	     =============================== -->
	<bean id="logSavedPath"
	      class="java.lang.String"
	      c:value="${savePath.log.files}" />

	<bean id="loginUserLogFileName" 
		  class="java.lang.String"      
		  c:original="${savePath.login.user.log.fileName}" />

	<!-- ===============================
	     DAO 등록 (SqlSession 생성자 주입)
	     =============================== -->
	<bean id="employeeDAO" 
	      class="com.motiveon.dao.EmployeeDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="menuDAO" 
	      class="com.motiveon.dao.MenuDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="calendarDAO"
	      class="com.motiveon.dao.CalendarDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="loginUserLogDAO"
	      class="com.motiveon.dao.LoginUserLogDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="popUpDAO"
	      class="com.motiveon.dao.PopUpDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="workDAO" 
	      class="com.motiveon.dao.WorkDAOImpl">
	    <constructor-arg index="0" ref="sqlSession"/>
	</bean>

	<bean id="workManagerDAO" 
	      class="com.motiveon.dao.WorkManagerDAOImpl">
		<constructor-arg index="0" ref="sqlSession"/>
	</bean>
	
	<bean id="accountDAO" class="com.motiveon.dao.AccountDAOImpl"
		c:session-ref="sqlSession" />

	<bean id="departmentDAO" class="com.motiveon.dao.DepartmentDAOImpl" 
		c:session-ref="sqlSession" />

<!-- MyBatis Mapper 스캔 -->
<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
    <property name="basePackage" value="com.motiveon.dao"/>
</bean>


	<!-- ===============================
	     Service 등록
	     =============================== -->
	<bean id="workService" 
		  class="com.motiveon.service.WorkServiceImpl"
          c:workDAO-ref="workDAO"
          c:workManagerDAO-ref="workManagerDAO"
          c:workReplyDAO-ref="workReplyDAO" />

	<bean id="calendarService"
	      class="com.motiveon.service.CalendarServiceImpl"
	      c:calendarDAO-ref="calendarDAO" />

	<bean id="menuService"
		  class="com.motiveon.service.MenuServiceImpl"
		  c:menuDAO-ref="menuDAO" />

	<bean id="employeeService"
		  class="com.motiveon.service.EmployeeServiceImpl"
		  c:employeeDAO-ref="employeeDAO" />

	<bean id="popUpService"
          class="com.motiveon.service.PopUpServiceImpl"
          c:popUpDAO-ref="popUpDAO" />
          
    <bean id="accountService"
		class="com.motiveon.service.AccountServiceImpl"
		c:accountDAO-ref="accountDAO" />
		
	<bean id="departmentService" 
		class="com.motiveon.service.DepartmentServiceImpl" 
		c:departmentDAO-ref="departmentDAO" />




<bean id="hrDAO" class="com.motiveon.dao.HrDAOImpl" c:session-ref="sqlSession"/>
<bean id="hrService" class="com.motiveon.service.HrServiceImpl" c:hrDAO-ref="hrDAO"/>
<bean id="noticeDAO" class="com.motiveon.dao.NoticeDAOImpl" c:session-ref="sqlSession"/>
<bean id="noticeService" class="com.motiveon.service.NoticeServiceImpl" c:noticeDAO-ref="noticeDAO"/>
<bean id="approvalDAO" class="com.motiveon.dao.ApprovalDAOImpl" c:session-ref="sqlSession"/>
<bean id="approvalService" class="com.motiveon.service.ApprovalServiceImpl" c:approvalDAO-ref="approvalDAO"/>
</beans>
